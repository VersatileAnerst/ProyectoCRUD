<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>

<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="applicationcrud.ui.MenuController">
    <children>
        <MenuBar fx:id="menuBar" prefHeight="29.0" prefWidth="1024.0">
            <menus>
                <!--TODO: Implementar estas acciones en todos los controladores de vistas
                que incluyan este menÃº, es decir, cada uno en el suyo: Customer,Account o Movement-->
                <Menu fx:id="menuAction" mnemonicParsing="false" text="Actions">
                    <items>
                        <MenuItem text="Create" onAction="#handleCreate"/>
                        <MenuItem text="Refresh" onAction="#handleRefresh"/>
                        <MenuItem text="Update" onAction="#handleUpdate"/>
                        <MenuItem text="Delete" onAction="#handleDelete"/>
                    </items>
                </Menu> 
                
                <Menu fx:id="menuOperations" text="Operations">
                    <items>
                        <MenuItem fx:id="menuItemLogout" text="Logout"/>
                    </items>
                </Menu>

                <Menu fx:id="menuHelp" text="Help">
                    <items>
                        <MenuItem fx:id="menuItemHelp" text="Help"/>
                    </items>
                </Menu>

                <Menu fx:id="menuAbout" text="About">
                    <items>
                        <MenuItem fx:id="menuItemAbout" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </children>
</HBox>

